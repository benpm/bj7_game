{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version"       : "0.2.0",
    "configurations": [
        // Use this configuration to debug your Rust code with LLDB
        {
            "type"    : "lldb",
            "request" : "launch",
            "cwd"     : "${workspaceFolder}",
            "name"    : "Debug",
            "cargo"   : {
                "args"  : ["run", "--bin=bevy_game", "--package=bevy_game"],
                "filter": {"name": "bevy_game", "kind": "bin"}
            },
            "terminal": "integrated",
            "console" : "integratedTerminal"
        }
    ]
}
